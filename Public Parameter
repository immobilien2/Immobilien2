using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class ItemGenerator : MonoBehaviour {

	float span = 1.0f;
	int ratio = 2;
	float speed = -0.03f;

	public void SetParameter(float span, float speed, int ratio) {
		this.span = span;
		this.speed = speed;
		this.ratio = ratio;
	}
